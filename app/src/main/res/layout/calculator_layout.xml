<GridLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:alignmentMode="alignBounds"
    android:columnCount="3"
    android:layout_row="4"
    android:rowOrderPreserved="false">

    <Button
        android:id="@+id/seven_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="7"
        android:textSize="28sp" />

    <Button
        android:id="@+id/eight_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="8"
        android:textSize="28sp" />

    <Button
        android:id="@+id/nine_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="9"
        android:textSize="28sp" />

    <Button
        android:id="@+id/four_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="4"
        android:textSize="28sp" />

    <Button
        android:id="@+id/five_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="5"
        android:textSize="28sp" />

    <Button
        android:id="@+id/six_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="6"
        android:textSize="28sp" />

    <Button
        android:id="@+id/one_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="1"
        android:textSize="28sp" />

    <Button
        android:id="@+id/two_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="2"
        android:textSize="28sp" />

    <Button
        android:id="@+id/three_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="3"
        android:textSize="28sp" />

    <Button
        android:id="@+id/decimal_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="."
        android:textSize="28sp" />

    <Button
        android:id="@+id/zero_button"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="fill_horizontal"
        android:fontFamily="@font/libre_franklin_regular"
        android:gravity="center"
        android:text="0"
        android:textSize="28sp" />

    <ImageView
        android:id="@+id/backspace_image_view"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_columnWeight="1"
        android:layout_gravity="center_vertical|fill_vertical|fill_horizontal"
        android:clickable="true"
        android:focusable="true"
        android:scaleType="centerInside"
        android:src="@drawable/outline_backspace"
        android:tint="#FF3C4A"
        tools:ignore="ContentDescription" />
</GridLayout>